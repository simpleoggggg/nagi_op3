      - name: ðŸ›‘ Stop Check
        run: |
          if [ -f "STOP_VPS" ]; then 
            echo "STOP_VPS file detected. Sending notification and exiting..."
            
            # Notify Discord that the auto-loop is paused
            curl -H "Content-Type: application/json" -d '{
              "embeds": [{
                "title": "ðŸ›‘ VPS AUTO-RUN PAUSED",
                "description": "The VPS did not start because the **STOP_VPS** file exists in the repository.",
                "color": 16711680,
                "footer": {"text": "Delete the STOP_VPS file to resume auto-starts."}
              }]
            }' ${{ secrets.DISCORD_WEBHOOK }}
            
            exit 1
          fi

